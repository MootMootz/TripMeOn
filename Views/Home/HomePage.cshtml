    <!-- Transparent Search Box -->

    <div class="search-container">
        <div class="search-box">
            <form action="/Product/SearchPackage" method="get">

                <label for="destinations"></label>
                @{
                    List<Destination> destinations = new TripMeOn.BL.ProductService().GetDestinations();
                    destinations.Insert(0, new Destination { Id = 0, Country = "destination" });
                    SelectList selectList = new SelectList(destinations, "Id", "Country");
                }
                @Html.DropDownList("destination", selectList)

                <label for="themes"></label>
                @{
                    List<Theme> themes = new TripMeOn.BL.ProductService().GetThemes();
                    themes.Insert(0, new Theme { Id = 0, Name = "theme" });
                    SelectList themeList = new SelectList(themes, "Id", "Name");
                }
                @Html.DropDownList("theme", themeList)

                <label for="months"></label>
                @{
                    List<SelectListItem> monthList = DateTimeHelper.GetMonths();
                    monthList.Insert(0, new SelectListItem { Value = "0", Text = "period" });
                }
                @Html.DropDownList("month", monthList)
                <button type="submit" class="btn btn-primary">search</button>

            </form>
        </div>
        <div id="search-container-shadow"></div>


    </div>

