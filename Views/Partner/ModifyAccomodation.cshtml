@model TripMeOn.Models.PartnerProducts.Accomodation
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modify Accomodation</title>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div>@TempData["SuccessMessage"].ToString()</div>
    }
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Modify accomodation: </legend>
            @Html.LabelFor(m => Model.Name)
            @Html.TextBoxFor(m => Model.Name)
            @Html.ValidationMessageFor(m => Model.Name)
            <br />
            @Html.LabelFor(m => Model.Type)
            @Html.TextBoxFor(m => Model.Type)
            @Html.ValidationMessageFor(m => Model.Type)
            <br />
            @Html.LabelFor(m => Model.Capacity)
            @Html.TextBoxFor(m => Model.Capacity)
            @Html.ValidationMessageFor(m => Model.Capacity)
            <br />
            @Html.LabelFor(m => Model.Price)
            @Html.TextBoxFor(m => Model.Price)
            @Html.ValidationMessageFor(m => Model.Price)
            <br />
            @Html.LabelFor(m => Model.PartnerId)
            @Html.TextBoxFor(m => Model.PartnerId)
            @Html.ValidationMessageFor(m => Model.PartnerId)
            <br />
            @Html.LabelFor(m => Model.DestinationId)
            @Html.TextBoxFor(m => Model.DestinationId)
            @Html.ValidationMessageFor(m => Model.DestinationId)
            <br />

            <input type="submit" value="Modifier" />
        </fieldset>
    }
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>