@model TripMeOn.Models.PartnerProducts.Restaurant
@{
    Layout = "_LayoutPartner";
    ViewBag.Title = "Restaurants";
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Restaurant</title>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div>@TempData["SuccessMessage"].ToString()</div>
    }
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Edit restaurant: </legend>
            <table>

                <tr>
                    <td>@Html.LabelFor(m => Model.Name)</td>
                    <td>@Html.TextBoxFor(m => Model.Name)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Name)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => Model.Type)</td>
                    <td>@Html.TextBoxFor(m => Model.Type)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Type)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => Model.Price)</td>
                    <td>@Html.TextBoxFor(m => Model.Price)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Price)</td>

                </tr>
                <tr>
                    <td>@Html.LabelFor(m => Model.Description)</td>
                    <td>@Html.TextBoxFor(m => Model.Description)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Description)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => Model.Partner)</td>
                    <td class="essai">@Html.DropDownListFor(m => m.PartnerId, (List<SelectListItem>)ViewBag.PartnerList, "Select a partner")</td>
                    <td>@Html.ValidationMessageFor(m => Model.PartnerId)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => Model.Destination)</td>
                    <td>@Html.DropDownListFor(m => m.DestinationId, (List<SelectListItem>)ViewBag.DestinationList, "Select a destination")</td>
                    <td>@Html.ValidationMessageFor(m => Model.DestinationId)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => Model.StartDate)</td>
                    <td>@Html.TextBoxFor(m => Model.StartDate, "{0:dd/MM/yyyy}", new { type = "date", @class = "date" })</td>
                    <td>@Html.ValidationMessageFor(m => Model.StartDate)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => Model.EndDate)</td>
                    <td>@Html.TextBoxFor(m => Model.EndDate, "{0:dd/MM/yyyy}", new { type = "date", @class = "date" })</td>
                    <td>@Html.ValidationMessageFor(m => Model.EndDate)</td>
                </tr>
            </table>

            <input type="submit" value="Edit" />
        </fieldset>


    }
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>

<style>
    .essai {
        pointer-events: none;
        background-color: gray;
    }
</style>