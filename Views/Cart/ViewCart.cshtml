@model TripMeOn.Models.Order.Cart

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Cart Page</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.ActionLink("Remove", "RemoveProduct", "Cart", new { id = @item.Id }, new { @class = "btn btn-danger" })

                    <br>
                    <form method="post" action="/Cart/UpdateQuantity">
                        <input type="hidden" name="itemId" value="@item.Id" />
                        <select name="quantity" onchange="this.form.submit()">
                            @for (int i = 1; i <= 10; i++) // Change the upper limit of the loop to 10, maybe 20?
                            { //ternary operator, A ? b: C = if A is true b, else C 
                                <option value="@i" @(i == item.Quantity ? "selected" : "--")>@i</option>
                            }
                        </select>
                    </form>
                </td>
                <td>@item.TourPackage.Id</td>
                <td>@item.TourPackage.Name</td>
                <td>@item.TourPackage.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.TourPackage.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @(Model.Items.Sum(item => item.TourPackage.Price * item.Quantity))
            </td>
        </tr>
    </table>
    <br>
    <form action="/" method="get"> <!-- redirect to homepage-->
        <button type="submit">Continue Shopping</button>
    </form>
    <form action="/Cart/CheckoutForm" method="post">
        <button type="submit">Check Out</button>
    </form>
</body>
</html>
