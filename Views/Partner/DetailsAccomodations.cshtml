@model TripMeOn.Models.PartnerProducts.Accomodation

@{
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
}

@section ExtraCss{
    <link rel="stylesheet" href="/css/Details.css">
}
<div class="flex-container">
    <div class="floating-box">
        <div class="background-photo"></div>
        <div class="overlay">
            <h2>@Model.Type</h2>
            <p>Destination: @Model.Destination?.Country</p>
            <p>Type: @Model.Type</p>
            <p>Available from: @Model.StartDate.ToString("MMMM") to @Model.EndDate.ToString("MMMM")</p>
            <p>Price: @Model.Price.ToString("0.##")&euro;</p>
            <form action="/Cart/BuyAccomodation" method="post">
                <input type="hidden" name="accomodationId" value="@Model.Id" />

                <input type="date" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                <input type="date" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />

                <label for="quantity">Quantity:</label>
                <input type="number" name="quantity" id="quantity" value="1" min="1" />

                <button type="submit">Add to Cart</button>
            </form>
        </div>
    </div>
</div>

@section ExtraScript{
    <script>
        function addToCart(accomodationId) {

            alert('Accomodation added to cart: ' + accomodationId);
        }
    </script>
}
