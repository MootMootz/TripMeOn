<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/StylePartner.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" />

</head>
<body>
    <div id="fixNav">
        <nav>
            <img src="~/images/logo.png" alt="logo">
            <button type="button">@Html.ActionLink("Home", "IndexPartner")</button>
            <button type="button">@Html.ActionLink("My services", "ServicesPartner")</button>
            @if (!String.IsNullOrEmpty(Context.Request.Cookies["Nickname"])) // si la valeur du cookie Nickname n'est pas vide
            {
                <span>Bonjour @Context.Request.Cookies["Nickname"]</span>
                // on affiche le message Bonjour suivi de la valeur de Cookie nickname
            }
            <button type="submit">@Html.ActionLink("Deconnection", "Deconnection", "Login")</button>
        </nav>
    </div>

    <div id="main">
        <div id="menu">
            @RenderSection("Menu", required: false)
        </div>

        <div id="contenu">
            @RenderBody()
        </div>
    </div>

    <div id="footer">
        &copy; @DateTime.Now.Year - THANKS KARENNNNNNNNNNNNNNN
    </div>
    @RenderSection("ExtraScripts", required: false)
</body>
</html><