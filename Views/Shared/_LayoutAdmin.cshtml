@using TripMeOn.Models.Products;
@using TripMeOn.Helper;

<!DOCTYPE html>
<html>

<head>
    <meta name="TRIPMEONheader" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/StyleP.css" rel="stylesheet" />

    @RenderSection("ExtraCss", required: false)

</head>
<body>
    <a href="/Employee/Notifications"><div id="logo"></div></a>
    <a href="/Employee/Notifications"><div id="logo-shadow"></div></a>

    <div id="menu">
        <div id="menu-container">
            ADMIN HOMEPAGE<br />
            <hr size="1" width="50%" color="black">

            <div id="tabs">
                @Html.ActionLink("Manage accounts","ManageAccounts","Employee")
