@using TripMeOn.Models.Products;
@using TripMeOn.Helper;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>#TripMeOn</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/Layout.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    @RenderSection("ExtraCss",required:false)
</head>
<body>
    <div id="logo"></div>
    <div id="logo-shadow"></div>

    <!-- Bootstrap Navigation Bar code goes here -->
    <div id="navbar">
@*        <div id=""></div>
*@        <ul id="menu" style="text-align: center">
            <li class="parent">
                <a href="/Home/HomePage">Home</a>
            </li>

            <!--   -------------------------------------------------------------------------   -->

            <li class="parent">
                <a href="#">Destinations<span class="expand"></span></a>
                <ul class="child">
                    <li><a href="#">France</a></li>
                    <li><a href="#">The UK</a></li>
                    <li><a href="#">Netherlands</a></li>
                    <li><a href="#">Turkey</a></li>
                    <li><a href="#">Agentina</a></li>
                    <li><a href="#">Blegium</a></li>
                    <li><a href="#">Spain</a></li>
                    <li><a href="#">Switzerland</a></li>
                    <li><a href="#">Portugal</a></li>
                    <li><a href="#">Italy</a></li>
                </ul>
            </li>

            <!--   -------------------------------------------------------------------------   -->

            <li class="parent">
                <a href="#">Themes<span class="expand"></span></a>
                <ul class="child">
                    <li><a href="#">Trekking</a></li>
                    <li><a href="#">Floral</a></li>
                    <li><a href="#">Cultural</a></li>
                    <li><a href="#">Heritage</a></li>
                    <li><a href="#">Snap and relax</a></li>
                    <li><a href="#">InstaSpots</a></li>
                    <li><a href="#">Nature</a></li>
                    <li><a href="#">Beach</a></li>
                    <li><a href="#">Culinary</a></li>
                    <li><a href="#">Colors</a></li>
                </ul>
            </li>

            <!--   -------------------------------------------------------------------------   -->

            <li class="parent">
                <a href="#">Holiday Finder<span class="expand"></span></a>
                <ul class="child">
                    <li>@Html.ActionLink("Restaurants", "ShowRestaurantList", "Home")</li>
                    <li>@Html.ActionLink("Accomodations", "ShowAccomodationList", "Home")</li>
                    <li>@Html.ActionLink("Land Services", "ShowTransportationList", "Home")</li>
                </ul>
            </li>
            <!--   -------------------------------------------------------------------------   -->

            <li class="parent">
                <a href="#">Tour Packages</a>
                <ul class="child">
                    <li><a href="#">Day Tours</a></li>
                    <li><a href="#">4 days Tours</a></li>
                    <li><a href="#">5 days Tours</a></li>
                    <li><a href="#">7 days Tours</a></li>
                </ul>
            </li>

            <!--   -------------------------------------------------------------------------   -->
            @*
            <li class="parent">
            <a href="/Content/InstaTips">Insta-tips</a>
            </li>*@

            <!--   -------------------------------------------------------------------------   -->
            @*			<li class="parent">
            <a href="/Content/AboutUs">About Us</a>
            </li>*@

            <!--   -------------------------------------------------------------------------   -->
            @*			<li class="parent">
            <a href="#">Become a Partner</a>
            </li>*@


            <!--   -------------------------------------------------------------------------   -->

            <li class="parent">
                <a href="#">Log in<span class="expand"></span></a>
                <ul class="child">


                    <li>@Html.ActionLink("I am a Partner", "LoginPartner", "Login")</li>
                    <li>@Html.ActionLink("I am a Traveller", "LoginClient", "Login")</li>

                    <li class="parent">
                        <a href="#">Create account?</a>
                        <ul class="child">
                            <li><a href="/Client/ClientForm">Add Client</a></li>
                            <li><a href="/Partner/PartnerForm">Partner</a></li>
                        </ul>
                </ul>
            </li>

            <!--   -------------------------------------------------------------------------   -->

            <li class="parent">
                <a href="#">Admin<span class="expand"></span></a>
                <ul class="child">
                    <li>@Html.ActionLink("Log in Admin", "LoginAdmin", "Login")</li>
                    @*<li><a href=" /Product/PackageList">Check Products</a></li>*@
                </ul>
            </li>


            <li class="parent">
                @if (!String.IsNullOrEmpty(Context.Request.Cookies["Nickname"])) // si la valeur du cookie Nickname n'est pas vide
                {
                    <span>Hello @Context.Request.Cookies["Nickname"]</span>
                    // on affiche le message Bonjour suivi de la valeur de Cookie nickname
                }
            </li>

            <li class="parent">
                @Html.ActionLink("Logout", "Deconnection", "Login")
            </li>

        </ul>
    </div>
    <!--   -------------------------------------------------------------------------   -->
    @RenderBody()




    <footer>
        <div>
            <div class="social-icons">
                <a href="https://twitter.com"><i class="fab fa-twitter"></i></a>
                <a href="https://facebook.com"><i class="fab fa-facebook"></i></a>
                <a href="https://instagram.com"><i class="fab fa-instagram"></i></a>
                <a href="https://www.tiktok.com"><i class="fab fa-tiktok"></i></a>
                <a href="https://youtube.com"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </footer>

    <script src="bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @RenderSection("ExtraScript",required:false)
</body>
</html>
