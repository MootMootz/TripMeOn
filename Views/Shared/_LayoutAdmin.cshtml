                @Html.ActionLink("Packages", "PackageList", "Product")
                <br />
                @Html.ActionLink("Notifications", "Notifications", "Employee")
                <br />
                @Html.ActionLink("List of all services", "ListeAllServices", "Employee")
                <br />
                @*@Html.ActionLink("Refund requests", "RefundRequest", "Employee")*@
            </div>
            <div id="logout">
                <button type="submit" class="btn btn-primary">@Html.ActionLink("Logout", "Deconnection", "Login")</button>
            </div>
        </div>
    </div>

    <div id="fixNav">
        <nav>
            <div class=pageTitle>


                @if (!String.IsNullOrEmpty(Context.Request.Cookies["Nickname"])) // si la valeur du cookie Nickname n'est pas vide
                {
                    <span> <strong>WELCOME @Context.Request.Cookies["Nickname"]</strong></span>
                    // on affiche le message Bonjour suivi de la valeur de Cookie nickname
                }
                <div class="pageTitle">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("IndexAdmin", "Employee")'">Home</button>
                    <button type="submit" class="btn btn-primary">@Html.ActionLink("Logout", "Deconnection", "Login")</button>
                </div>
            </div>

            @*<div id="actionRequiredBlock">
            Action required<br />
            <div id="actionRequiredContainer">
            <div id="actionRequiredContent">
            Nothing to show here
            </div>
            </div>*@

        </nav>

        <div id="content">

            @RenderBody()

        </div>
    </div>



