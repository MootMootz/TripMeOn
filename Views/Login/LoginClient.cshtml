@model TripMeOn.ViewModels.NavigationViewModel
@{
    ViewBag.Title = "LoginClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section ExtraCss{
    <link rel="stylesheet" href="/css/HomePage.css">
}

<div class="login">


    @if (Model.AuthentifyC)
    {

        <h3>
            You are already log in :
            @Model.Client.Nickname
        </h3>
        @Html.ActionLink("Voulez-vous vous d√©connecter ?", "Deconnexion")

        <p>
            @Html.ActionLink("Check Order Status", "OrderStatus", "Cart")
        </p>
    }
    else
    {
        <p>
            Veuillez vous authentifier :
        </p>

        using (Html.BeginForm())
        {

            <div>
                @Html.LabelFor(m => m.Client.Nickname)
                @Html.TextBoxFor(m => m.Client.Nickname)
                @Html.ValidationMessageFor(m => m.Client.Nickname)
            </div>
            <div>
                @Html.LabelFor(m => m.Client.Password)
                @Html.PasswordFor(m => m.Client.Password)
                @Html.ValidationMessageFor(m => m.Client.Password)
            </div>
            <input type="submit" value="Log in" />
            <br />
            @Html.ActionLink("create account", "ClientForm", "Client")
        }
    }

</div>

